
<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <meta name="theme-color" content="#fff">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:site" content="@_shoonia">
  <meta name="twitter:card" content="summary">
  <meta property="og:site_name" content="{{ meta.title }}">
  <meta property="og:url" content="{{ permalink | siteUrl }}">
  <meta property="og:type" content="article">

  {% if image %}
    <meta property="og:image" content="{{ image }}">
    <meta itemprop="image" content="{{ image }}">
  {% endif %}

  {% if date %}
    <meta property="article:published_time" content="{{ date }}">
  {% endif %}

  {% if modified %}
    <meta property="article:modified_time" content="{{ modified }}">
  {% endif %}

  {% if description %}
    <meta name="description" content="{{ description }}">
    <meta name="twitter:description" content="{{ description }}">
    <meta property="og:description" content="{{ description }}">
    <meta itemprop="description" content="{{ description }}">
  {% else %}
    <meta name="description" content="{{ meta.description }}">
    <meta name="twitter:description" content="{{ meta.description }}">
    <meta property="og:description" content="{{ meta.description }}">
    <meta itemprop="description" content="{{ meta.description }}">
  {% endif %}

  {% if title %}
    <meta property="og:title" content="{{ title }}">
    <meta itemprop="name" content="{{ title }}">
    <title>{{ title }}</title>
  {% else %}
    <meta property="og:title" content="{{ meta.title }}">
    <meta itemprop="name" content="{{ meta.title  }}">
    <title>{{ meta.title  }}</title>
  {% endif %}

  <link rel="preload" href="/assets/firacode@5.2.0/firacode-regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
  <link rel="stylesheet" href="/assets/styles.css">
  <link rel="manifest" href="/manifest.webmanifest" crossorigin="anonymous">
  <link rel="icon" href="/favicon.png" type="image/png">
  <link rel="apple-touch-icon" href="/assets/icons/icon-192x192.png">
  <link rel="webmention" href="https://webmention.io/shoonia.site/webmention">
  <link rel="pingback" href="https://webmention.io/shoonia.site/xmlrpc">
  <link rel="canonical" href="{{ permalink | siteUrl }}">
  <link rel="alternate" href="{{ meta.homepage }}/rss.xml" type="application/rss+xml" title="{{ meta.title }}">
  <link rel="alternate" href="{{ meta.homepage }}/rss.json" type="application/json" title="{{ meta.title }}">
  <link rel="sitemap" href="/sitemap.xml" type="application/xml" title="{{ meta.title }}">
  {{ head | safe }}
</head>
<body>
<header>
  <nav>
    <a href="/">
      Home
    </a>
  </nav>
</header>
